		<javacpp.ffmpeg.version>4.2.2-1.5.3</javacpp.ffmpeg.version>
		<javacpp.cuda.version>10.2-7.6-1.5.3</javacpp.cuda.version>
		<jersey.version>2.31</jersey.version>
		<mapdb.version>3.0.8</mapdb.version>
		<vertx-core.version>3.9.3</vertx-core.version>
		<enunciate.version>2.13.1</enunciate.version>	
		<jsr305.version>3.0.2</jsr305.version>      
		<kafka-streams.version>2.2.1</kafka-streams.version>
		<openjfx.graphics.version>11.0.2</openjfx.graphics.version>
		<guava.lib.version>29.0-jre</guava.lib.version>
		<tensorflow.version>1.15.0</tensorflow.version>
		<httpmime.version>4.3.6</httpmime.version>
